{
  "name": "resolid",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm -r --filter './packages/*' build && tsc -b && vite build",
    "preview": "vite preview",
    "build:baseui": "pnpm --filter @resolid/baseui build",
    "dev:baseui": "pnpm --filter @resolid/baseui dev",
    "build:solidflow": "pnpm --filter @resolid/solidflow build",
    "dev:solidflow": "pnpm --filter @resolid/solidflow dev",
    "build:radix": "pnpm --filter @resolid/radix build",
    "dev:radix": "pnpm --filter @resolid/radix dev",
    "publish": "pnpm -r --filter './packages/*' publish",
    "publish:baseui": "pnpm --filter @resolid/baseui publish",
    "publish:radix": "pnpm --filter @resolid/radix publish",
    "publish:solidflow": "pnpm --filter @resolid/solidflow publish"
  },
  "dependencies": {
    "@resolid/baseui": "workspace:*",
    "@resolid/radix": "workspace:*",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.3",
    "solid-js": "^1.9.9",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "clsx": "^2.1.1",
    "tsup": "^8.5.1",
    "typescript": "~5.8.3",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-solid": "^2.11.8"
  }
}
