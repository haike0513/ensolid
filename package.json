{
  "name": "resolid",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm -r --filter './packages/*' build && tsc -b && vite build",
    "preview": "vite preview",
    "build:baseui": "pnpm --filter @resolid/baseui build",
    "dev:baseui": "pnpm --filter @resolid/baseui dev",
    "build:solidflow": "pnpm --filter @resolid/solidflow build",
    "dev:solidflow": "pnpm --filter @resolid/solidflow dev",
    "build:radix": "pnpm --filter @resolid/radix build",
    "dev:radix": "pnpm --filter @resolid/radix dev"
  },
  "dependencies": {
    "@resolid/baseui": "workspace:*",
    "@resolid/radix": "workspace:*",
    "solid-js": "^1.9.9"
  },
  "devDependencies": {
    "clsx": "^2.1.1",
    "typescript": "~5.8.3",
    "vite": "^7.1.7",
    "vite-plugin-solid": "^2.11.8"
  }
}
