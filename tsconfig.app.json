{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "erasableSyntaxOnly": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ensolid/radix": ["./packages/radix/src"],
      "@ensolid/baseui": ["./packages/baseui/src"],
      "@ensolid/solidflow": ["./packages/solidflow/src"],
      "@ensolid/visx": ["./packages/visx/src"],
      "@ensolid/fiber": ["./packages/fiber/src"],
      "@ensolid/aisolid": ["./packages/aisolid/src"]
    }
  },
  "include": ["src", "public/registry"]
}
